= form_for @operating_system do |f|

  - if @operating_system.errors.any?
    #error_explanation
      h2= t 'error.error-explanation',
        errors: @operating_system.errors.count,
        model: t('v.operating-systems.singular')

      ul
        - @operating_system.errors.full_messages.each do |message|
          li= message

  .field
    = f.label :title, t('noun.Title')
    = f.text_field :title
  .field
    = f.label :description, t('noun.Description')
    = f.text_area :description
  .field
    = f.label :url, t('noun.Wikipedia-URL')
    = f.text_field :url
  .actions = f.submit t('verb.Save')
