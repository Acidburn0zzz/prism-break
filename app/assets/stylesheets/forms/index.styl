.field
  p 0 .5em 0
  clearfix()

  label
    d block
    fw bold
    s 14px
  p
    s 75%
    c light

  .software-logo
    float right
    m x x 0

input[type=text],
input[type=password],
input[type=url],
input[type=number],
input[type=email],
textarea
  d block
  b 1px solid bc
  p .5em .4em
  f 14px/1.5 sans-serif
  w 100%

textarea
  height 15em

.checkboxes
  m 0 0 1em
.checkbox
  bg #fff
  bb 1px solid #ddd
  input
    m 0 .5em
  label
    f 14px/32px sans
    p 0
    d inline
    float none
    ta left
    fw normal
