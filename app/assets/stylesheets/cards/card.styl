.card-logo
  d block
  float left
  w 60px
  h 60px
  mr x*0.75

body.softwares.show .card
  bg none

.card
  bb 1px solid #ddd
  list-style none
  bg #fff
  d block
  clearfix()
  relative()

  a
    &.btn-rectangle
    &.btn-square
      d block

    &.btn-rectangle
      fl left
      w 276px
      p .75em
      clearfix()
      h 84px
      &:hover
        bg m245

    &.btn-square
      fl left
      lhh 84px
      w 44px
      ta center
      bl 1px solid #eee
      c anchor
      bg #fff
      c dim
      &:hover
        bg m245
        c txt

  .card-logo
    mr x*0.75

  .title
    c #333
    f 0.9em/1.5 sans

  .desc
    c txt

  .category, .rating
    f 70%/1.5 sans

  .category
    c dim

  .rating
    .stars
      c orange
      .fa
        mr 2px
    .num
      s 75%
      va text-bottom
      c light
