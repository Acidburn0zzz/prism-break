.card-logo
  d block
  float left
  w 60px
  h 60px
  mr x*0.75

body.softwares.show .card
  bg none

.card
  bb 1px solid #ddd
  list-style none
  bg #fff
  d block
  clearfix()
  relative()

  a
    &.btn-rectangle
    &.btn-square
      d block

    &.btn-rectangle
      fl left
      w 276px
      p .75em
      clearfix()
      &:hover
        bg m245

    &.btn-square
      fl left
      lhh 84px
      w 44px
      ta center
      bl 1px solid #eee
      s 75%
      c #333
      bg #fff
      &:hover
        bg m245

  .card-logo
    mr x*0.75

  .title
    c #333
    f 0.9em/1.5 sans

  .desc
    c txt

  .category, .rating .num
    c dim

  .category
    f 70%/1.5 sans

  .rating
    f 1.2em/85% sans
    .stars
      c orange
    .num
      s 50%

  &.plugin
    bl x * 0.75 solid #eee
    font-size 80%
    img.logo
      w 25px
      h 25px
      ml x
