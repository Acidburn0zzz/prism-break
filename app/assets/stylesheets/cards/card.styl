.card
  border-bottom 1px solid #ddd
  list-style none
  clearfix()
  line-height 1.25

  d block
  p .75em
  clearfix()

  img.logo
    d block
    float left
    w 50px
    h 50px
    mr x

  .title, p
    display inline
    &:hover
      td underline
      c hover

  .title
    font-weight bold
    pr x * 0.25

  .desc
    c txt

  &.plugin
    bl x * 0.75 solid #eee
    font-size 80%
    img.logo
      w 25px
      h 25px
      ml x

