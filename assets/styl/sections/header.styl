#header-site
  position fixed
  top 0
  left 0
  w 100%
  padding 0;
  height 3em
  border-bottom 1px solid #ddd
  background linear-gradient(top, m255, m240 100%)
  box-shadow b7 0 0 3em
  text-align center

h1#brand
  padding: 0 x;
  d inline-block
  font-size 1.25em
  line-height 48px
  text-transform uppercase
  text-align center
  display inline-block
  font-weight normal
  br 1px solid bc
  bl 1px solid bc

  a
    c txt

    .lightning
      c light

    &:hover,
    &:hover .lightning
      color #09c

#header-site ul.nav
  d none
  list-style none
  margin 0
  padding 0

  li
    float right
    padding 0 x
    line-height 3em
    border-right 1px solid #ddd

    &.right
      float right
      border-left 1px solid #ddd
      border-right none

    a.plain
      color #333
      &:hover
        color #09c

#page-switch
  .switch
    border 1px solid #ddd
    height 30px
    margin 8px 0

    a.switch-button
      line-height 30px
      display block
      padding 0 .5em
      float left
      width 90px
      text-align center

      &.default
        border-right 1px solid #ddd

      &.active
        color #333
        background #fff
        cursor default

      &.inactive
        background #eee
        color #999

#page-switch .switch a.switch-button.inactive:hover
  color #09c
  background #f5f5f5

#header-site ul li#lang select
  margin 0
  vertical-align middle
