#header
  border-bottom 1px solid #ddd
  bg #fff

  .top
    clearfix()
    h 44px

  a#brand
    p 0 .75em
    fl()
    text-transform uppercase
    font 1em/43px sans
    c txt

    .lightning
      c light

    &:hover,
    &:hover .lightning
      color #09c

  a#donate
    fr()
    p 0 (.75/.8em)
    f .8em/43px sans
    c dim
    &:hover
      c hover
    &:active
      c link


  ul.tabs
    bt 1px solid #ddd
    clear both
    clearfix()

    li
      fl()
      w 107px

      a
        d block
        f 1em/2 sans
        c txt
        p 0 1em
        c txt
        bg #eee
        br 1px solid #ddd

        &:hover
          bg #ddd

        &.active
          bg #fff

      &:last-of-type
        w 106px
