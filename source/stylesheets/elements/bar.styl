.bar
  d block
  h 44px
  w 100%
  p 0 1em
  ta left
  f 1em/43px sans
  c #333
  bg #fff
  b none
  bb 1px solid #ddd
  &.warning
    c #f00
  &.negative
    c dim

  .label
    float left

    .logo
      w 28px
      h 28px
      float left
      m 8px 12px 0 0

  .icon
    float right
    margin-right -1em
    w 44px
    ta center
    c dim

  .logos
    clearfix()
    p 8px 1em
    img.logo
      fl()
      w 28px
      h 28px
      mr .5em

a.bar, button.bar
  relative()
  cursor pointer
  .label
    c link
  &:hover
    c #000
    bg m245
  &:active
    c #000
    bg m235
