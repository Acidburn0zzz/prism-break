.card
  bb 1px solid #ddd
  list-style none
  bg #fff
  d block
  clearfix()
  relative()
  h 85px

  .btn-rectangle
  .btn-square
    d block
    h 60px + 12px * 2

  .btn-rectangle
    fl left
    w 100%
    p .75em
    clearfix()

  a.btn-rectangle
    .title
      c link
    &:hover
      bg m245

  .btn-square
    absolute()
    top 0
    right 0
    lh 60px + 12px * 2
    w 44px
    ta center
    bl 1px solid #eee
    c anchor
    bg #fff
    c dim

  a.btn-square
    &:hover
      bg m245
      c txt

  .card-logo
    mr x*0.75

  .title
    pt .5em
    c #333

  .small
    f 80%/1.5 sans
    c dim

.card.max
  .btn-rectangle
    w 100%

.card.head, .card.text
  .card-logo
    mr x*0.875
  .title
    f 1.5em/1.5 sans
    pt x*.125

.card.text
  .btn-rectangle
    p 1em

.card-logo
  d block
  fl()
  w 60px
  h 60px
  mr x*0.75
