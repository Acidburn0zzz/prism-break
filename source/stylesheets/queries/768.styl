    m 0 1em

  .section
    mb 1em
    bt 1px solid #ddd
    bl 1px solid #ddd

  .box
    mb 1em
    b 1px solid #ddd
    .text-block
      bb none

  .card.text.max
    mb 1em
    b 1px solid #ddd

  .text-block.large
    bb none
