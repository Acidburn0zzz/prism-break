body
  p 0 40px 40px


  #container
    p 2em 0 1em

  .section
    mb 1em
    bt 1px solid #ddd
    bl 1px solid #ddd

  .content-side
    d block
    float right
    w 33.33%

    .text-block
      bb none
      pt 0
      pl 1.5em

    .section
      ml 1em
      bl none
      .bar
        w 100% !important
        f .75em sans
        lhh 2em
        br none
        .logo, i.fa, .icon
          d none

  .content-main
    float right
    m 0
    w 66.67%

  .card.text.max
    mb 1em
    b 1px solid #ddd

  .text-block.large 
    m 0
    strong
      pb .75em
      mb .75em
      bb 1px solid #ddd

  #footer
    p 2em 0
    .content-main
      m 0

  &.categories.show
  &.subcategories.show
    #container
      .content-side
        float left
        m 0
        w 20%
        .section
          m 0 1em 0 0
      .content-main
        float left
        w 80%
