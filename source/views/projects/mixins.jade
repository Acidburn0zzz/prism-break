mixin project-card(project)
  .card
    a.btn-rectangle(href="../../projects/#{project.slug}")
      img.card-logo(src= routes.logos + project.logo)
      .title= project.name
      .category= project.protocols

    a.btn-square(href=project.url)
      i.fa.fa-external-link-square

mixin project-top(project)
  .card
    .btn-rectangle
      img.card-logo(src= routes.logos + project.logo)
      .title= project.name
      .category= project.protocols

    a.btn-square(href=project.url)
      i.fa.fa-external-link-square
