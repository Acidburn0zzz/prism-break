          .icon: i.fa.fa-angle-right

        a.bar(href="./prism-break.tgz")
          .label Download Site
          .icon: i.fa.fa-save

    .section
      .pipe Development

      .bars
        a.bar(href="bitcoin:1NAfx5GEZHR8t69LjxTeShPP4XXaxeUqQw")
