    .text-block.large!= h.marked(t['site-about-index'])

  .content-main
      
    .section
      .pipe= t.About
      .bars
        a.bar(href="./media")
          .label Media Mentions
          .icon: i.fa.fa-angle-right

        a.bar(href="./privacy")
